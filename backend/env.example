# 應用程式設定
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:8081

# 資料庫設定
MONGODB_URI=mongodb://localhost:27017/carbon-tracker
REDIS_URL=redis://localhost:6379

# JWT 設定
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=7d

# Google API 設定 (用於 OCR 和地圖服務)
GOOGLE_API_KEY=your-google-api-key-here
GOOGLE_VISION_API_KEY=your-google-vision-api-key-here

# 發票 API 設定
INVOICE_API_URL=https://api.einvoice.nat.gov.tw
INVOICE_API_KEY=your-invoice-api-key-here

# 郵件服務設定
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# 檔案上傳設定
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# 日誌設定
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# 速率限制設定
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 碳足跡計算設定
DEFAULT_EMISSION_FACTORS={
  "walking": 0,
  "cycling": 0,
  "driving": 0.192,
  "public_transport": 0.089,
  "flying": 0.285
}
